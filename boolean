--Boolean deyerlerle ekrana yazdirma. Hedef tutulan musteri sayina catib catmadigini bilmek olar.
DECLARE
    v_musteri_sayi smallint;
    v_uygun boolean := false;
    v_hedef_say integer:=100;
BEGIN
    SELECT
        COUNT(*) into v_musteri_sayi
    FROM customers;
    
    IF v_musteri_sayi > v_hedef_say THEN
        v_uygun := true;
    END if;
    
    IF  v_uygun THEN
         dbms_output.put_line('Musteri hedefine ulasildi');
    ELSE
        dbms_output.put_line('Musteri sayina ulasilamadi');
    END if;
END;
